<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomActivity">

    <!-- 툴바 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/app_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 마이룸 안내 -->
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="80dp"
        android:text="마이룸"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@+id/app_toolbar"
        app:layout_constraintTop_toTopOf="@+id/app_toolbar" />



    <!-- 마이룸 사용자 프로필 -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="100dp"

        android:src="@drawable/img_room2"

        app:layout_constraintStart_toStartOf="@+id/app_toolbar"
        app:layout_constraintTop_toTopOf="@+id/app_toolbar" />

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        android:layout_weight="1"
        android:orientation="vertical"


        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/app_toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="15dp"
            android:text="김수민"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="10dp"
            android:text="smille2939" />

    </LinearLayout>

    <!-- 신청내역 안내 -->
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="300dp"
        android:text="신청내역"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@+id/app_toolbar"
        app:layout_constraintTop_toTopOf="@+id/app_toolbar" />

    <!-- 신청내역 1 -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="350dp"
        android:layout_weight="1"
        android:orientation="vertical"

        app:layout_constraintStart_toStartOf="@+id/app_toolbar"
        app:layout_constraintTop_toTopOf="@+id/app_toolbar">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_cooking1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="원데이"
            android:textColor="#000000"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="커스텀 디자인 케이크 마스터 클래스"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 신청내역 2 -->
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="350dp"
        android:layout_weight="1"
        android:orientation="vertical"

        app:layout_constraintStart_toStartOf="@+id/app_toolbar"
        app:layout_constraintTop_toTopOf="@+id/app_toolbar">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_cooking3" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="원데이"
            android:textColor="#000000"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="마카롱 마스터 클래스"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



